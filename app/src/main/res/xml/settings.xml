<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            android:title="Widget Style" >

        <com.thebluealliance.spectrum.SpectrumPreference
                android:defaultValue="@color/md_indigo_500"
                android:key="bgcolor"
                android:summary="Set the background color and transparency."
                android:title="Background Color"
                android:icon="@drawable/ic_color_lens_black_24dp"
                app:spectrum_colors="@array/demo_colors_expanded" />

        <com.thebluealliance.spectrum.SpectrumPreference
                android:defaultValue="@color/white"
                android:key="textcolor"
                android:title="Text Color"
                android:summary="Set the text color."
                android:icon="@drawable/ic_format_color_text_black_24dp"
                app:spectrum_colors="@array/many_shades_of_grey" />


        <ListPreference
                android:key="pref_textSize"
                android:title="Text Size"
                android:dialogTitle="Text Size"
                android:entries="@array/pref_textSize_entries"
                android:entryValues="@array/pref_textSize_entries"
                android:icon="@drawable/ic_format_size_black_24dp"
                android:defaultValue="Medium"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title="Sources" >

    <EditTextPreference
            android:key="pref_manualSource"
            android:title="Enter Feed URL"
            android:summary="Enter your own feed URL."/>

    <MultiSelectListPreference
            android:key="pref_popularSources"
            android:title="@string/pref_popularSources"
            android:summary="Select from a list of popular feeds."
            android:dialogTitle="@string/pref_popularSources"
            android:entries="@array/pref_popularFeed_entries"
            android:entryValues="@array/pref_popularFeed_values" />
    </PreferenceCategory>

    <PreferenceCategory
            android:title="Feeds"
            android:key="feeds">

            </PreferenceCategory>
</PreferenceScreen>